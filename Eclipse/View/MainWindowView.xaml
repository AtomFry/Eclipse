                                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                            <GradientStop Offset="0.0">
                                                <GradientStop.Color>
                                                    <MultiBinding Converter="{StaticResource UserRatingToBrush}">
                                                        <Binding Path="CurrentGameList.Game1.UserRating"/>
                                                        <Binding Path="StarOffset00"/>
                                                        <Binding Path="Star5"/>
                                                    </MultiBinding>
                                                </GradientStop.Color>
                                            </GradientStop>
                                            <GradientStop Offset="0.001">
                                                <GradientStop.Color>
                                                    <MultiBinding Converter="{StaticResource UserRatingToBrush}">
                                                        <Binding Path="CurrentGameList.Game1.UserRating"/>
                                                        <Binding Path="StarOffset01"/>
                                                        <Binding Path="Star5"/>
                                                    </MultiBinding>
                                                </GradientStop.Color>
                                            </GradientStop>
                                            <GradientStop Offset="0.5">
                                                <GradientStop.Color>
                                                    <MultiBinding Converter="{StaticResource UserRatingToBrush}">
                                                        <Binding Path="CurrentGameList.Game1.UserRating"/>
                                                        <Binding Path="StarOffset05"/>
                                                        <Binding Path="Star5"/>
                                                    </MultiBinding>
                                                </GradientStop.Color>
                                            </GradientStop>
                                            <GradientStop Offset="0.501">
                                                <GradientStop.Color>
                                                    <MultiBinding Converter="{StaticResource UserRatingToBrush}">
                                                        <Binding Path="CurrentGameList.Game1.UserRating"/>
                                                        <Binding Path="StarOffset06"/>
                                                        <Binding Path="Star5"/>
                                                    </MultiBinding>
                                                </GradientStop.Color>
                                            </GradientStop>
                                            <GradientStop Offset="1.0">
                                                <GradientStop.Color>
                                                    <MultiBinding Converter="{StaticResource UserRatingToBrush}">
                                                        <Binding Path="CurrentGameList.Game1.UserRating"/>
                                                        <Binding Path="StarOffset10"/>
                                                        <Binding Path="Star5"/>
                                                    </MultiBinding>
                                                </GradientStop.Color>
                                            </GradientStop>
                                        </LinearGradientBrush>
                                    </Polygon.Fill>
                                </Polygon>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            <!-- Selected game background image -->
            <Grid Name="Grid_Selected_Game_Background"
                  IsHitTestVisible="False"
                  Grid.Row="0" 
                  Grid.RowSpan="{Binding IsDisplayingFeature, Converter={StaticResource FeatureToRowSpanConverter}}" 
                  Grid.Column="{Binding IsDisplayingFeature, Converter={StaticResource FeatureToColumnStartConverter}}"
                  Grid.ColumnSpan="{Binding IsDisplayingFeature, Converter={StaticResource FeatureToColumnSpanConverter}}"
                  Panel.ZIndex="200">

                <!-- Black background behind selected game background image to make gradient opacity mask work -->
                <Rectangle Name="Image_Selected_Background_Black"
                           IsHitTestVisible="False"
                           HorizontalAlignment="Stretch" 
                           VerticalAlignment="Stretch"
                           Panel.ZIndex="210">
                    <Rectangle.Fill>
                        <SolidColorBrush Color="Black"/>
                    </Rectangle.Fill>
                </Rectangle>

                <!-- Background image for selected game -->
                <Image Name="Image_Displayed_BackgroundImage"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       IsHitTestVisible="False"
                       Stretch="UniformToFill"
                       Panel.ZIndex="220"
                       ClipToBounds="True"
                       MaxHeight="{Binding ActualHeight, ElementName=Grid_Selected_Game_Background}"
                       MaxWidth="{Binding ActualWidth, ElementName=Grid_Selected_Game_Background}"
                       RenderOptions.BitmapScalingMode="HighQuality" >
                    <Image.OpacityMask>
                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                            <LinearGradientBrush.GradientStops>
                                <GradientStop Offset="0" Color="Transparent"/>
                                <GradientStop Offset="0.2" Color="Black"/>
                                <GradientStop Offset="0.8" Color="Black"/>
                                <GradientStop Offset="1" Color="Transparent"/>
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                    </Image.OpacityMask>
                </Image>

                <Image Name="Image_Active_BackgroundImage"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Stretch="UniformToFill"
                       IsHitTestVisible="False"
                       Panel.ZIndex="230"
                       Opacity="0"
                       ClipToBounds="True"
                       MaxHeight="{Binding ActualHeight, ElementName=Grid_Selected_Game_Background}"
                       MaxWidth="{Binding ActualWidth, ElementName=Grid_Selected_Game_Background}"
                       RenderOptions.BitmapScalingMode="HighQuality" >
                    <Image.OpacityMask>
                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                            <LinearGradientBrush.GradientStops>
                                <GradientStop Offset="0" Color="Transparent"/>
                                <GradientStop Offset="0.2" Color="Black"/>
                                <GradientStop Offset="0.8" Color="Black"/>
                                <GradientStop Offset="1" Color="Black"/>
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                    </Image.OpacityMask>
                </Image>
            </Grid>

            <!-- Selected game video -->
            <Grid Name="Grid_Selected_Game_Video"
                  IsHitTestVisible="False"
                  Grid.Row="0" 
                  Grid.RowSpan="{Binding IsDisplayingFeature, Converter={StaticResource FeatureToRowSpanConverter}}" 
                  Grid.Column="{Binding IsDisplayingFeature, Converter={StaticResource FeatureToColumnStartConverter}}"
                  Grid.ColumnSpan="{Binding IsDisplayingFeature, Converter={StaticResource FeatureToColumnSpanConverter}}"
                  Panel.ZIndex="100">
                <MediaElement Name="Video_SelectedGame"
                              IsHitTestVisible="False"
                          Source="{Binding CurrentGameList.Game1.GameFiles.VideoPath}"
                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="Uniform"
                          LoadedBehavior="Manual"
                          Panel.ZIndex="110"
                          MediaOpened="Video_SelectedGame_MediaOpened"
                          MediaEnded="Video_SelectedGame_MediaEnded">
                </MediaElement>
                <Image  Name="Image_Bezel"
                        IsHitTestVisible="False"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Panel.ZIndex="120"
                        Stretch="Uniform">
                </Image>
                <Grid.RenderTransform>
                    <TranslateTransform>
                        <TranslateTransform.Y>
                            <MultiBinding Converter="{StaticResource FeatureVideoOffsetConverter}">
                                <Binding Path="IsDisplayingFeature"/>
                                <Binding Path="IsDisplayingMoreInfo"/>
                                <Binding ElementName="CurrentListGrid" Path="ActualHeight"/>
                            </MultiBinding>
                        </TranslateTransform.Y>
                    </TranslateTransform>
                </Grid.RenderTransform>
            </Grid>

            <Grid Name="GameListGrid"
                  IsHitTestVisible="False"
                  Grid.Row="8"
                  Grid.RowSpan="10"
                  Grid.Column="0"
                  Grid.ColumnSpan="32"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Panel.ZIndex="700">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <!-- current games List -->
                    <RowDefinition Height="1*"/>
                    <!-- next games list -->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="31*"/>
                </Grid.ColumnDefinitions>
                <Grid.RenderTransform>
                    <TranslateTransform>
                        <TranslateTransform.Y>
                            <MultiBinding Converter="{StaticResource FeatureOffsetConverter}">
                                <Binding Path="IsDisplayingFeature"/>
                                <Binding Path="IsDisplayingMoreInfo"/>
                                <Binding ElementName="CurrentListGrid" Path="ActualHeight"/>
                            </MultiBinding>
                        </TranslateTransform.Y>
                    </TranslateTransform>
                </Grid.RenderTransform>

                <!-- Current List Games -->
                <Grid Name="CurrentListGrid"
                      IsHitTestVisible="False"
                  Grid.Row="0"
                  Grid.RowSpan="1"
                  Grid.Column="1"
                  Grid.ColumnSpan="1"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="5*"/>
                    </Grid.RowDefinitions>
                    <TextBlock  Name="TextBlock_CurrentGameListDescription"
                                IsHitTestVisible="False"
                                Grid.Row="0"
                                Grid.RowSpan="1"
                                FontFamily="Calibri" 
                                FontWeight="ExtraBold"
                                FontSize="28" 
                                Foreground="GhostWhite"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap"
                                TextAlignment="Left"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Bottom">
                        <TextBlock.Text>
                            <MultiBinding StringFormat=" {0} ({1})">
                                <Binding Path="CurrentGameList.ListDescription"/>
                                <Binding Path="CurrentGameList.MatchCount"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                    <StackPanel Name="GameImages" 
                                IsHitTestVisible="False"
                        Grid.Row="1"
                        Grid.RowSpan="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                        <Border BorderThickness="2" BorderBrush="AntiqueWhite" IsHitTestVisible="False">
                            <Image Name="Image_Game1"
                                   IsHitTestVisible="False"
                               Source="{Binding CurrentGameList.Game1.GameFiles.FrontImage}"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Stretch"
                               RenderOptions.BitmapScalingMode="HighQuality" 
                               Margin="2,2,2,2"
                               Stretch="Uniform"/>
                        </Border>

                        <Image Name="Image_Game2"
                               IsHitTestVisible="False"
                               Source="{Binding CurrentGameList.Game2.GameFiles.FrontImage}"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Stretch"
                               RenderOptions.BitmapScalingMode="HighQuality" 
                               Margin="2,2,2,2"
                               Stretch="Uniform"/>

                        <Image Name="Image_Game3" 
                               Source="{Binding CurrentGameList.Game3.GameFiles.FrontImage}"
                               IsHitTestVisible="False"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Stretch"
                               RenderOptions.BitmapScalingMode="HighQuality" 
                               Margin="2,2,2,2"
                               Stretch="Uniform"/>

                        <Image Name="Image_Game4" Source="{Binding CurrentGameList.Game4.GameFiles.FrontImage}"
                               IsHitTestVisible="False"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Stretch"
                               RenderOptions.BitmapScalingMode="HighQuality" 
                               Margin="2,2,2,2"
                               Stretch="Uniform"/>

                        <Image Name="Image_Game5" Source="{Binding CurrentGameList.Game5.GameFiles.FrontImage}"
                               IsHitTestVisible="False"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Stretch"
                               RenderOptions.BitmapScalingMode="HighQuality" 
                               Margin="2,2,2,2"
                               Stretch="Uniform"/>

                        <Image Name="Image_Game6" Source="{Binding CurrentGameList.Game6.GameFiles.FrontImage}"
                               IsHitTestVisible="False"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Stretch"
                               RenderOptions.BitmapScalingMode="HighQuality" 
                               Margin="2,2,2,2"
                               Stretch="Uniform"/>

                        <Image Name="Image_Game7" Source="{Binding CurrentGameList.Game7.GameFiles.FrontImage}"
                               IsHitTestVisible="False"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Stretch"
                               RenderOptions.BitmapScalingMode="HighQuality" 
                               Margin="2,2,2,2"
                               Stretch="Uniform"/>

                        <Image Name="Image_Game8" Source="{Binding CurrentGameList.Game8.GameFiles.FrontImage}"
                               IsHitTestVisible="False"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Stretch"
                               RenderOptions.BitmapScalingMode="HighQuality" 
                               Margin="2,2,2,2"
                               Stretch="Uniform"/>

                        <Image Name="Image_Game9" Source="{Binding CurrentGameList.Game9.GameFiles.FrontImage}"
                               IsHitTestVisible="False"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Stretch"
                               RenderOptions.BitmapScalingMode="HighQuality" 
                               Margin="2,2,2,2"
                               Stretch="Uniform"/>

                        <Image Name="Image_Game10" Source="{Binding CurrentGameList.Game10.GameFiles.FrontImage}"
                               IsHitTestVisible="False"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Stretch"
                               RenderOptions.BitmapScalingMode="HighQuality" 
                               Margin="2,2,2,2"
                               Stretch="Uniform"/>

                        <Image Name="Image_Game11" Source="{Binding CurrentGameList.Game11.GameFiles.FrontImage}"
                               IsHitTestVisible="False"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Stretch"
                               RenderOptions.BitmapScalingMode="HighQuality" 
                               Margin="2,2,2,2"
                               Stretch="Uniform"/>

                        <Image Name="Image_Game12" Source="{Binding CurrentGameList.Game12.GameFiles.FrontImage}"
                               IsHitTestVisible="False"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Stretch"
                               RenderOptions.BitmapScalingMode="HighQuality" 
                               Margin="2,2,2,2"
                               Stretch="Uniform"/>
                    </StackPanel>
                </Grid>

                <!-- Previous game in current list -->
                <Grid Name="CurrentListPrev1GameGrid"
                      IsHitTestVisible="False"
                  Grid.Row="0"
                  Grid.RowSpan="1"
                  Grid.Column="1"
                  Grid.ColumnSpan="1"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="5*"/>
                    </Grid.RowDefinitions>
                    <Grid.RenderTransform>
                        <TranslateTransform X="{Binding ActualWidth, ElementName=Image_PreviousGame, Converter={StaticResource DivideByNegative1}}"/>
                    </Grid.RenderTransform>
                    <StackPanel Name="CurrentListPrev1GameImage" 
                                IsHitTestVisible="False"
                                Grid.Row="1"
                                Grid.RowSpan="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch">
                        <Image Name="Image_PreviousGame"
                               IsHitTestVisible="False"
                           Source="{Binding CurrentGameList.Game0.GameFiles.FrontImage}"
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Stretch"
                           RenderOptions.BitmapScalingMode="HighQuality" 
                           Opacity="0.25"
                           Margin="2,2,2,2"
                           Stretch="Uniform">
                        </Image>
                    </StackPanel>
                </Grid>

                <!-- Next list game images -->
                <Grid Name="NextListGrid"
                      IsHitTestVisible="False"
                  Grid.Row="0"
                  Grid.RowSpan="1"
                  Grid.Column="1"
                  Grid.ColumnSpan="1"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="5*"/>
                    </Grid.RowDefinitions>
                    <Grid.RenderTransform>
                        <TranslateTransform Y="{Binding ActualHeight,ElementName=NextListGrid}"/>
                    </Grid.RenderTransform>
                    <TextBlock  
                        Name="TextBlock_NextGameListDescription"
                        IsHitTestVisible="False"
                        Grid.Row="0"
                        Grid.RowSpan="1"
                        FontFamily="Calibri" 
                        FontWeight="ExtraBold"
                        FontSize="28" 
                        Foreground="GhostWhite"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="Wrap"
                        TextAlignment="Left"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Bottom">
                        <TextBlock.Text>
                            <MultiBinding StringFormat=" {0} ({1})">
                                <Binding Path="NextGameList.ListDescription"/>
                                <Binding Path="NextGameList.MatchCount"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                    <StackPanel Name="NextListGameImages" 
                                IsHitTestVisible="False"
                        Grid.Row="1"
                        Grid.RowSpan="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                        <Image Name="Image_NextListGame1"
                               IsHitTestVisible="False"
                            Source="{Binding NextGameList.Game1.GameFiles.FrontImage}"
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Stretch"
                            RenderOptions.BitmapScalingMode="HighQuality" 
                            Margin="2,2,2,2"
                            Stretch="Uniform"/>

                        <Image Source="{Binding NextGameList.Game2.GameFiles.FrontImage}"
                               IsHitTestVisible="False"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Stretch"
                               RenderOptions.BitmapScalingMode="HighQuality" 
                               Margin="2,2,2,2"
                               Stretch="Uniform"/>

                        <Image Source="{Binding NextGameList.Game3.GameFiles.FrontImage}"
                               IsHitTestVisible="False"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Stretch"
                               RenderOptions.BitmapScalingMode="HighQuality" 
                               Margin="2,2,2,2"
                               Stretch="Uniform"/>

                        <Image Source="{Binding NextGameList.Game4.GameFiles.FrontImage}"
                               IsHitTestVisible="False"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Stretch"
                               RenderOptions.BitmapScalingMode="HighQuality" 
                               Margin="2,2,2,2"
                               Stretch="Uniform"/>

                        <Image Source="{Binding NextGameList.Game5.GameFiles.FrontImage}"
                               IsHitTestVisible="False"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Stretch"
                               RenderOptions.BitmapScalingMode="HighQuality" 
                               Margin="2,2,2,2"
                               Stretch="Uniform"/>

                        <Image Source="{Binding NextGameList.Game6.GameFiles.FrontImage}"
                               IsHitTestVisible="False"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Stretch"
                               RenderOptions.BitmapScalingMode="HighQuality" 
                               Margin="2,2,2,2"
                               Stretch="Uniform"/>

                        <Image Source="{Binding NextGameList.Game7.GameFiles.FrontImage}"
                               IsHitTestVisible="False"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Stretch"
                               RenderOptions.BitmapScalingMode="HighQuality" 
                               Margin="2,2,2,2"
                               Stretch="Uniform"/>

                        <Image Source="{Binding NextGameList.Game8.GameFiles.FrontImage}"
                               IsHitTestVisible="False"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Stretch"
                               RenderOptions.BitmapScalingMode="HighQuality" 
                               Margin="2,2,2,2"
                               Stretch="Uniform"/>

                        <Image Source="{Binding NextGameList.Game9.GameFiles.FrontImage}"
                               IsHitTestVisible="False"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Stretch"
                               RenderOptions.BitmapScalingMode="HighQuality" 
                               Margin="2,2,2,2"
                               Stretch="Uniform"/>

                        <Image Source="{Binding NextGameList.Game10.GameFiles.FrontImage}"
                               IsHitTestVisible="False"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Stretch"
                               RenderOptions.BitmapScalingMode="HighQuality" 
                               Margin="2,2,2,2"
                               Stretch="Uniform"/>

                        <Image Source="{Binding NextGameList.Game11.GameFiles.FrontImage}"
                               IsHitTestVisible="False"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Stretch"
                               RenderOptions.BitmapScalingMode="HighQuality" 
                               Margin="2,2,2,2"
                               Stretch="Uniform"/>

                        <Image Source="{Binding NextGameList.Game12.GameFiles.FrontImage}"
                               IsHitTestVisible="False"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Stretch"
                               RenderOptions.BitmapScalingMode="HighQuality" 
                               Margin="2,2,2,2"
                               Stretch="Uniform"/>
                    </StackPanel>
                </Grid>

                <!-- Previous game in current list -->
                <Grid Name="NextListPrev1GameGrid"
                      IsHitTestVisible="False"
                      Grid.Row="0"
                      Grid.RowSpan="1"
                      Grid.Column="1"
                      Grid.ColumnSpan="1"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="5*"/>
                    </Grid.RowDefinitions>
                    <Grid.RenderTransform>
                        <TranslateTransform X="{Binding ActualWidth, ElementName=Image_NextListPreviousGame, Converter={StaticResource DivideByNegative1}}"
                                            Y="{Binding ActualHeight,ElementName=NextListPrev1GameGrid}"/>
                    </Grid.RenderTransform>
                    <StackPanel Name="NextListPrev1GameImage" 
                                IsHitTestVisible="False"
                                Grid.Row="1"
                                Grid.RowSpan="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch">
                        <Image Name="Image_NextListPreviousGame"
                               IsHitTestVisible="False"
                               Source="{Binding NextGameList.Game0.GameFiles.FrontImage}"
                               HorizontalAlignment="Left" 
                               VerticalAlignment="Stretch"
                               RenderOptions.BitmapScalingMode="HighQuality" 
                               Opacity="0.25"
                               Margin="2,2,2,2"
                               Stretch="Uniform">
                        </Image>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
        <!-- END DISPLAYING RESULTS -->

        <!-- RECOGNIZING -->
        <Grid   Background="Transparent"
                IsHitTestVisible="False"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Width="{Binding ActualWidth, ElementName=MainWindowUserControl}"
                Height="{Binding ActualHeight, ElementName=MainWindowUserControl}"
                Visibility="{Binding IsRecognizing, Converter={StaticResource BoolToVis}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>                
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Image Name="Image_Listening"
                   IsHitTestVisible="False"
                Grid.Row="2"
                Grid.RowSpan="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Stretch="Uniform"
                RenderOptions.BitmapScalingMode="HighQuality" 
                gif:ImageBehavior.AnimatedSource="{Binding VoiceRecognitionGif}">
                <Image.OpacityMask>
                    <RadialGradientBrush Center="0.5,0.5">
                        <GradientStop Offset="0" Color="Black"/>
                        <GradientStop Offset="0.85" Color="Black"/>
                        <GradientStop Offset="1.00" Color="Transparent"/>
                    </RadialGradientBrush>
                </Image.OpacityMask>
            </Image>
        </Grid>
        <!-- END RECOGNIZING -->

    </Canvas>
</UserControl>