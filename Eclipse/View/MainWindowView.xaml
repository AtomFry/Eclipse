<UserControl x:Class="Eclipse.View.MainWindowView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Eclipse.View"
             xmlns:myconverters="clr-namespace:Eclipse.Converters"
             xmlns:gif="http://wpfanimatedgif.codeplex.com" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             Name="MainWindowUserControl">
    <UserControl.DataContext>
        <local:MainWindowViewModel/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <myconverters:DivideByConverter x:Key="DivideBy3" A="3"/>
        <myconverters:DivideByConverter x:Key="DivideByNegative1" A="-1"/>
        <myconverters:GameMatchToSettingsOpacityConverter x:Key="SettingsOpacityConverter"/>
        <myconverters:DisplayingFeatureOffsetConverter x:Key="FeatureOffsetConverter"/>
        <myconverters:DisplayingFeatureLogoOffsetConverter x:Key="FeatureLogoOffsetConverter"/>
        <myconverters:DisplayingFeatureVideoOffsetConverter x:Key="FeatureVideoOffsetConverter"/>
        <myconverters:IsFeatureToRowSpanConverter x:Key="FeatureToRowSpanConverter"/>
        <myconverters:IsFeatureToColumnSpanConverter x:Key="FeatureToColumnSpanConverter"/>
        <myconverters:IsFeatureToColumnStartConverter x:Key="FeatureToColumnStartConverter"/>
        <myconverters:BooleanToVisibilityConverter x:Key="InvertBooleanToVisibilityConverter" True="Collapsed" False="Visible"/>
        <myconverters:BooleanToStringConverter x:Key="FavoriteToFavoriteOptionConverter" True="Remove from favorites" False="Add to favorites"/>
        <myconverters:FeatureOptionToDoubleConverter x:Key="PlayGameOpacityConverter" PlayGameValue="1.0" MoreInfoValue="0.5"/>
        <myconverters:FeatureOptionToDoubleConverter x:Key="MoreInfoOpacityConverter" PlayGameValue="0.5" MoreInfoValue="1.0"/>
        <myconverters:StringLengthToVisibilityConverter x:Key="StringLengthVisibilityConverter" Empty="Collapsed" NonEmpty="Visible"/>
        <myconverters:StringLengthToVisibilityConverter x:Key="InvertStringLengthVisibilityConverter" Empty="Visible" NonEmpty="Collapsed"/>
        <myconverters:FloatToStringConverter x:Key="StarRatingToStarRatingOptionConverter" ZeroValue="Rate this game" NonZeroValue="Change rating"/>
        <myconverters:UserRatingToBrushConverter x:Key="UserRatingToBrush"/>
        <myconverters:GameDetailOptionToBrushConverter x:Key="GameDetailPlayGameColorConverter" GameDetailComparison="Play">
            <myconverters:GameDetailOptionToBrushConverter.MatchingValue>
                <SolidColorBrush Color="Black"/>
            </myconverters:GameDetailOptionToBrushConverter.MatchingValue>
            <myconverters:GameDetailOptionToBrushConverter.UnmatchingValue>
                <SolidColorBrush Color="WhiteSmoke"/>
            </myconverters:GameDetailOptionToBrushConverter.UnmatchingValue>
        </myconverters:GameDetailOptionToBrushConverter>
        <myconverters:GameDetailOptionToBrushConverter x:Key="GameDetailFavoriteColorConverter" GameDetailComparison="Favorite">
            <myconverters:GameDetailOptionToBrushConverter.MatchingValue>
                <SolidColorBrush Color="Black"/>
            </myconverters:GameDetailOptionToBrushConverter.MatchingValue>
            <myconverters:GameDetailOptionToBrushConverter.UnmatchingValue>
                <SolidColorBrush Color="WhiteSmoke"/>
            </myconverters:GameDetailOptionToBrushConverter.UnmatchingValue>
        </myconverters:GameDetailOptionToBrushConverter>
        <myconverters:GameDetailOptionToBrushConverter x:Key="GameDetailRatingColorConverter" GameDetailComparison="Rating">
            <myconverters:GameDetailOptionToBrushConverter.MatchingValue>
                <SolidColorBrush Color="Black"/>
            </myconverters:GameDetailOptionToBrushConverter.MatchingValue>
            <myconverters:GameDetailOptionToBrushConverter.UnmatchingValue>
                <SolidColorBrush Color="WhiteSmoke"/>
            </myconverters:GameDetailOptionToBrushConverter.UnmatchingValue>
        </myconverters:GameDetailOptionToBrushConverter>
        <myconverters:GameDetailOptionToBrushConverter x:Key="GameDetailMoreLikeThisColorConverter" GameDetailComparison="MoreLikeThis">
            <myconverters:GameDetailOptionToBrushConverter.MatchingValue>
                <SolidColorBrush Color="Black"/>
            </myconverters:GameDetailOptionToBrushConverter.MatchingValue>
            <myconverters:GameDetailOptionToBrushConverter.UnmatchingValue>
                <SolidColorBrush Color="WhiteSmoke"/>
            </myconverters:GameDetailOptionToBrushConverter.UnmatchingValue>
        </myconverters:GameDetailOptionToBrushConverter>
        <myconverters:GameDetailOptionToBrushConverter x:Key="GameDetailPlayGameBorderColorConverter" GameDetailComparison="Play">
            <myconverters:GameDetailOptionToBrushConverter.MatchingValue>
                <SolidColorBrush Color="WhiteSmoke"/>
            </myconverters:GameDetailOptionToBrushConverter.MatchingValue>
            <myconverters:GameDetailOptionToBrushConverter.UnmatchingValue>
                <SolidColorBrush Color="Transparent"/>
            </myconverters:GameDetailOptionToBrushConverter.UnmatchingValue>
        </myconverters:GameDetailOptionToBrushConverter>
        <myconverters:GameDetailOptionToBrushConverter x:Key="GameDetailFavoriteBorderColorConverter" GameDetailComparison="Favorite">
            <myconverters:GameDetailOptionToBrushConverter.MatchingValue>
                <SolidColorBrush Color="WhiteSmoke"/>
            </myconverters:GameDetailOptionToBrushConverter.MatchingValue>
            <myconverters:GameDetailOptionToBrushConverter.UnmatchingValue>
                <SolidColorBrush Color="Transparent"/>
            </myconverters:GameDetailOptionToBrushConverter.UnmatchingValue>
        </myconverters:GameDetailOptionToBrushConverter>
        <myconverters:GameDetailOptionToBrushConverter x:Key="GameDetailRatingBorderColorConverter" GameDetailComparison="Rating">
            <myconverters:GameDetailOptionToBrushConverter.MatchingValue>
                <SolidColorBrush Color="WhiteSmoke"/>
            </myconverters:GameDetailOptionToBrushConverter.MatchingValue>
            <myconverters:GameDetailOptionToBrushConverter.UnmatchingValue>
                <SolidColorBrush Color="Transparent"/>
            </myconverters:GameDetailOptionToBrushConverter.UnmatchingValue>
        </myconverters:GameDetailOptionToBrushConverter>
        <myconverters:GameDetailOptionToBrushConverter x:Key="GameDetailMoreLikeThisBorderColorConverter" GameDetailComparison="MoreLikeThis">
            <myconverters:GameDetailOptionToBrushConverter.MatchingValue>
                <SolidColorBrush Color="WhiteSmoke"/>
            </myconverters:GameDetailOptionToBrushConverter.MatchingValue>
            <myconverters:GameDetailOptionToBrushConverter.UnmatchingValue>
                <SolidColorBrush Color="Transparent"/>
            </myconverters:GameDetailOptionToBrushConverter.UnmatchingValue>
        </myconverters:GameDetailOptionToBrushConverter>
        <myconverters:GameDetailOptionToBrushConverter x:Key="GameDetailMoreLikeThisIconStrokeConverter" GameDetailComparison="MoreLikeThis">
            <myconverters:GameDetailOptionToBrushConverter.MatchingValue>
                <SolidColorBrush Color="WhiteSmoke"/>
            </myconverters:GameDetailOptionToBrushConverter.MatchingValue>
            <myconverters:GameDetailOptionToBrushConverter.UnmatchingValue>
                <SolidColorBrush Color="Black"/>
            </myconverters:GameDetailOptionToBrushConverter.UnmatchingValue>
        </myconverters:GameDetailOptionToBrushConverter>
        <myconverters:BooleanToPointCollectionConverter x:Key="FavoriteDetailIconConverter" 
                                                        False="20,0 30,0 30,20 50,20 50,30 30,30 30,50 20,50 20,30 0,30 0,20 20,20"
                                                        True="0,20 30,20 30,25 0,25"/>
        <myconverters:BackgroundImageOversizeConverter x:Key="OversizeImageConverter"/>

        <!-- 1-second image fade in - call when game changes -->
        <Storyboard x:Key="BackgroundImageFadeInSlow">
            <DoubleAnimation BeginTime="0:0:0" 
                             Storyboard.TargetProperty="Opacity" 
                             From="0" To="1" 
                             Duration="0:0:0.5"
                             Completed="BackgroundImageFadeInSlow_Completed"/>
        </Storyboard>
    </UserControl.Resources>
    <Canvas Background="Black" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
            IsHitTestVisible="False"
            Width="{Binding ActualWidth, ElementName=MainWindowUserControl}"
            Height="{Binding ActualHeight, ElementName=MainWindowUserControl}">

        <!-- LOADING -->
        <Grid   IsHitTestVisible="False"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Background="Black"
                Width="{Binding ActualWidth, ElementName=MainWindowUserControl}"
                Height="{Binding ActualHeight, ElementName=MainWindowUserControl}"
                Visibility="{Binding IsInitializing, Converter={StaticResource BoolToVis}}">
        </Grid>
        <!-- END LOADING -->

        <!-- ATTRACT MODE -->
        <Grid   Name="Grid_AttractMode"
                IsHitTestVisible="False"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Panel.ZIndex="900"
                Background="Black"
                Width="{Binding ActualWidth, ElementName=MainWindowUserControl, Converter={StaticResource OversizeImageConverter}}"
                Height="{Binding ActualHeight, ElementName=MainWindowUserControl, Converter={StaticResource OversizeImageConverter}}"
                Visibility="{Binding IsDisplayingAttractMode, Converter={StaticResource BoolToVis}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Canvas Name="Canvas_AttractModeCanvas"
                    Grid.Row="0" 
                    Grid.RowSpan="18" 
                    Grid.Column="0" 
                    Grid.ColumnSpan="32"
                    IsHitTestVisible="False"
                    Panel.ZIndex="901">

                <Canvas Name="Canvas_AttractModeInnerCanvas"
                        Width="{Binding ActualWidth, ElementName=Canvas_AttractModeCanvas}"
                        Height="{Binding ActualHeight, ElementName=Canvas_AttractModeCanvas}"
                        IsHitTestVisible="False">

                    <Image Name="Image_AttractModeBackgroundImage"
                       VerticalAlignment="Center"
                       Stretch="UniformToFill"
                       Width="{Binding ActualWidth, ElementName=MainWindowUserControl, Converter={StaticResource OversizeImageConverter}}"
                       RenderOptions.BitmapScalingMode="HighQuality" >
                        <Image.OpacityMask>
                            <LinearGradientBrush StartPoint="0.5,1" EndPoint="0.5,0">
                                <LinearGradientBrush.GradientStops>
                                    <GradientStop Offset="0" Color="Transparent"/>
                                    <GradientStop Offset="0.25" Color="Black"/>
                                </LinearGradientBrush.GradientStops>
                            </LinearGradientBrush>
                        </Image.OpacityMask>
                    </Image>
                </Canvas>
            </Canvas>

            <!-- Darken the background when displaying feature and more info (helps with text visibility) -->
            <Rectangle Grid.Row="0" Grid.RowSpan="18"
                       Grid.Column="0" Grid.ColumnSpan="32"
                       IsHitTestVisible="False"
                       Fill="Black" Opacity="0.1" 
                       Panel.ZIndex="902"
                       Visibility="{Binding IsDisplayingFeature, Converter={StaticResource BoolToVis}}">
            </Rectangle>

            <Image Name="Image_AttractModeClearLogo" HorizontalAlignment="Center" VerticalAlignment="Stretch"
                   IsHitTestVisible="False"
                   Panel.ZIndex="903"
                   Grid.Row="2" Grid.RowSpan="6"
                   Grid.Column="1" Grid.ColumnSpan="12"
                   Stretch="Uniform"
                   RenderOptions.BitmapScalingMode="HighQuality">
            </Image>
        </Grid>
        
        <!-- DISPLAY ERROR -->
        <Grid   Background="Transparent"
                IsHitTestVisible="False"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Panel.ZIndex="1000"
                Width="{Binding ActualWidth, ElementName=MainWindowUserControl}"
                Height="{Binding ActualHeight, ElementName=MainWindowUserControl}"
                Visibility="{Binding IsDisplayingError, Converter={StaticResource BoolToVis}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Rectangle  Grid.Row="2"
                        Grid.RowSpan="1"
                        IsHitTestVisible="False"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"        
                        Fill="Black">
                <Rectangle.OpacityMask>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <LinearGradientBrush.GradientStops>
                            <GradientStop Offset="0" Color="Transparent"/>
                            <GradientStop Offset="0.2" Color="Black"/>
                            <GradientStop Offset="0.8" Color="Black"/>
                            <GradientStop Offset="1" Color="Transparent"/>
                        </LinearGradientBrush.GradientStops>
                    </LinearGradientBrush>
                </Rectangle.OpacityMask>
            </Rectangle>            
            
            <TextBlock Text="{Binding ErrorMessage}"
                       IsHitTestVisible="False"
                    Grid.Row="2"
                    Grid.RowSpan="1"                       
                   Foreground="GhostWhite"
                   FontFamily="Calibri"
                   FontSize="48"
                   Width="{Binding ActualWidth, ElementName=MainWindowUserControl}"
                   TextAlignment="Center"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        </Grid>
        <!-- END DISPLAY ERROR -->

        <!-- DISPLAYING RESULTS -->
        <Grid   Background="Transparent"
                IsHitTestVisible="False"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Width="{Binding ActualWidth, ElementName=MainWindowUserControl}"
                Height="{Binding ActualHeight, ElementName=MainWindowUserControl}"
                Visibility="{Binding IsDisplayingResults, Converter={StaticResource BoolToVis}}">
            <!-- 18 rows -->
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <!-- 32 columns -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Options Icon -->
            <StackPanel Name="StackPanel_OptionsIcon"
                        IsHitTestVisible="False"
                        Grid.Row="10" Grid.RowSpan="1" 
                        Grid.Column="0" Grid.ColumnSpan="1"
                        Orientation="Vertical"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Visibility="{Binding IsDisplayingMoreInfo, Converter={StaticResource InvertBooleanToVisibilityConverter}}"
                        Opacity="{Binding CurrentGameList.Game0, Converter={StaticResource SettingsOpacityConverter}}"
                        Panel.ZIndex="800">
                <Image Name="Image_SettingsIcon" 
                       IsHitTestVisible="False"
                       Source="{Binding SettingsIconWhite}"
                       HorizontalAlignment="Stretch" 
                       VerticalAlignment="Stretch"
                       Height="{Binding ActualHeight, ElementName=TextBlock_CurrentGameListDescription}"                       
                       RenderOptions.BitmapScalingMode="HighQuality" 
                       Margin="2,2,2,2"
                       Stretch="Uniform"/>
            </StackPanel>

            <!-- Picking Category -->
            <Grid Name="Grid_PickingOptions"
                  IsHitTestVisible="False"
                  Grid.Row="0" Grid.RowSpan="18"
                  Grid.Column="0" Grid.ColumnSpan="32"
                  Panel.ZIndex="900"
                  Visibility="{Binding IsPickingCategory, Converter={StaticResource BoolToVis}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6.64*"/>
                    <ColumnDefinition Width="1.37*"/>
                    <ColumnDefinition Width="3.91*"/>
                    <ColumnDefinition Width="27.34*"/>
                    <ColumnDefinition Width="60.75*"/>
                </Grid.ColumnDefinitions>

                <!-- Backdrop for options - black rectangle that fades to transparent -->
                <Rectangle Name="Rectangle_PickingOptionsBackground"
                           IsHitTestVisible="False"
                           Grid.Row="0" Grid.RowSpan="12"
                           Grid.Column="0" Grid.ColumnSpan="5"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           Stretch="Fill"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           Fill="Black">
                    <Rectangle.OpacityMask>
                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                            <LinearGradientBrush.GradientStops>
                                <GradientStop Offset="0" Color="Black"/>
                                <GradientStop Offset="0.2" Color="Black"/>
                                <GradientStop Offset="1" Color="Transparent"/>
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                    </Rectangle.OpacityMask>
                </Rectangle>
               
                <TextBlock Text="{Binding OptionList.Option6.LongDescription}"
                           IsHitTestVisible="False"
                           Grid.Row="1"
                           Grid.Column="1" Grid.ColumnSpan="3"
                            FontFamily="Calibri" 
                            FontWeight="Light"
                            FontSize="26" 
                            Foreground="DimGray"
                            TextAlignment="Left"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"/>
                <TextBlock Text="{Binding OptionList.Option7.LongDescription}"
                           IsHitTestVisible="False"
                           Grid.Row="2"
                           Grid.Column="1" Grid.ColumnSpan="3"
                           FontFamily="Calibri" 
                           FontWeight="Light"
                           FontSize="26" 
                           Foreground="DimGray"
                           TextAlignment="Left"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding OptionList.Option8.LongDescription}"
                           IsHitTestVisible="False"
                           Grid.Row="3"
                           Grid.Column="1" Grid.ColumnSpan="3"
                           FontFamily="Calibri" 
                           FontWeight="Light"
                           FontSize="26" 
                           Foreground="DimGray"
                           TextAlignment="Left"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding OptionList.Option9.LongDescription}"
                           IsHitTestVisible="False"
                           Grid.Row="4"
                           Grid.Column="1" Grid.ColumnSpan="3"
                           FontFamily="Calibri" 
                           FontWeight="Light"
                           FontSize="26" 
                           Foreground="DimGray"
                           TextAlignment="Left"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding OptionList.Option0.LongDescription}"
                           IsHitTestVisible="False"
                           Grid.Row="5"
                           Grid.Column="1" Grid.ColumnSpan="3"
                           FontFamily="Calibri" 
                           FontWeight="UltraBlack"
                           FontSize="26" 
                           Foreground="GhostWhite"
                           TextAlignment="Left"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding OptionList.Option1.LongDescription}"
                           IsHitTestVisible="False"
                           Grid.Row="6" 
                           Grid.Column="1" Grid.ColumnSpan="3"
                           FontFamily="Calibri" 
                           FontWeight="Light"
                           FontSize="26" 
                           Foreground="DimGray"
                           TextAlignment="Left"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding OptionList.Option2.LongDescription}"
                           IsHitTestVisible="False"
                           Grid.Row="7"
                           Grid.Column="1" Grid.ColumnSpan="3"
                           FontFamily="Calibri" 
                           FontWeight="Light"
                           FontSize="26" 
                           Foreground="DimGray"
                           TextAlignment="Left"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding OptionList.Option3.LongDescription}"
                           IsHitTestVisible="False"
                           Grid.Row="8"
                           Grid.Column="1" Grid.ColumnSpan="3"
                           FontFamily="Calibri" 
                           FontWeight="Light"
                           FontSize="26" 
                           Foreground="DimGray"
                           TextAlignment="Left"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding OptionList.Option4.LongDescription}"
                           IsHitTestVisible="False"
                           Grid.Row="9"
                           Grid.Column="1" Grid.ColumnSpan="3"
                           FontFamily="Calibri" 
                           FontWeight="Light"
                           FontSize="26" 
                           Foreground="DimGray"
                           TextAlignment="Left"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding OptionList.Option5.LongDescription}"
                           IsHitTestVisible="False"
                           Grid.Row="10"
                           Grid.Column="1" Grid.ColumnSpan="3"
                           FontFamily="Calibri" 
                           FontWeight="Light"
                           FontSize="26" 
                           Foreground="DimGray"
                           TextAlignment="Left"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
            </Grid>

            <!-- Darken the background when displaying feature and more info (helps with text visibility) -->
            <Rectangle Grid.Row="0" Grid.RowSpan="18" Grid.Column="0" Grid.ColumnSpan="32" Fill="Black" Opacity="0.1" 
                       Panel.ZIndex="499"
                       IsHitTestVisible="False"
                       Visibility="{Binding IsDisplayingFeature, Converter={StaticResource BoolToVis}}">
            </Rectangle>

            <!-- Selected game logo and details -->
            <Grid Name="Grid_Selected_Game_Heading"
                  IsHitTestVisible="False"
                  Grid.Row="1" Grid.RowSpan="16"
                  Grid.Column="1" Grid.ColumnSpan="16"
                  Panel.ZIndex="500"
                  Background="Transparent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.RenderTransform>
                    <TranslateTransform>
                        <TranslateTransform.Y>
                            <MultiBinding Converter="{StaticResource FeatureLogoOffsetConverter}">
                                <Binding Path="IsDisplayingFeature"/>
                                <Binding Path="IsDisplayingMoreInfo"/>
                                <Binding ElementName="CurrentListGrid" Path="ActualHeight"/>
                            </MultiBinding>
                        </TranslateTransform.Y>
                    </TranslateTransform>
                </Grid.RenderTransform>

                <!-- Displaying the game clear logo for the selected game -->
                <Image Name="Image_Displayed_GameClearLogo"
                        Grid.Row="0"
                        IsHitTestVisible="False"
                        Panel.ZIndex="510"
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Bottom"
                        RenderOptions.BitmapScalingMode="HighQuality" 
                        Visibility="{Binding CurrentGameList.Game1.GameFiles.ClearLogo.AbsoluteUri, Converter={StaticResource StringLengthVisibilityConverter}}"
                        Stretch="Uniform"/>

                <!-- Game title to be displayed if clear logo is missing -->
                <TextBlock Name="TextBlock_Displayed_GameTitle"
                           Grid.Row="0"
                           IsHitTestVisible="False"
                           Panel.ZIndex="509"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"
                            FontFamily="Arial" 
                            FontWeight="Bold"
                            FontSize="36" 
                            Foreground="WhiteSmoke"
                            TextTrimming="None"
                            TextWrapping="Wrap"                           
                            Visibility="{Binding CurrentGameList.Game1.GameFiles.ClearLogo.AbsoluteUri, Converter={StaticResource InvertStringLengthVisibilityConverter}}"
                            RenderOptions.BitmapScalingMode="HighQuality">
                </TextBlock>

                <Grid Name="Grid_SelectedGameDetails" Grid.Row="1" IsHitTestVisible="False">
                    <!-- Selected game details-->
                    <StackPanel Name="StackPanel_SelectedGameDetails"
                                IsHitTestVisible="False"
                                Orientation="Horizontal"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch">

                        <TextBlock Name="TextBlock_MatchPercentage"
                                   IsHitTestVisible="False"
                                    FontFamily="Arial" 
                                    FontWeight="Bold"
                                    FontSize="25" 
                                    Foreground="MediumSpringGreen"
                                    TextTrimming="None"
                                    TextWrapping="NoWrap"
                                    TextAlignment="Center"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom"/>

                        <TextBlock Name="TextBlock_ReleaseYear"
                                   IsHitTestVisible="False"
